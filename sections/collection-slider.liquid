{{ 'slider-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}

<section>
  <slider-component class="">
    <h1>
      {{ section.settings.title }}
    </h1>
    <div class="collection-slider--container">
      <button
        type="button"
        class="slider-button slider-button--prev"
        name="previous"
        aria-label="{{ 'general.slider.previous_slide' | t }}"
        data-step="{{section.settings.step}}"
      >
        {% render 'icon-caret' %}
      </button>

      <button
        type="button"
        class="slider-button slider-button--next"
        name="next"
        aria-label="{{ 'general.slider.next_slide' | t }}"
        data-step="{{section.settings.step}}"
      >
        {% render 'icon-caret' %}
      </button>

      <ul
        class="collection-slider"
        id="Slider-{{ section.id }}"
        role="list"
      >
        {%- for block in section.blocks -%}
          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            class="slider__slide"
            {{ block.shopify_attributes }}
          >
            {% render 'card-collection', card_collection: block.settings.collection %}
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </slider-component>
</section>

{% schema %}
{
  "name": "Collection Slider",
  "tag": "section",
  "class": "section section-collection-list",
  "max_blocks": 8,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Categorias para ti",
      "label": "t:sections.collection-list.settings.title.label"
    },
    {
      "type": "range",
      "id": "step",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 1,
      "label": "Scroll Step"
    }
  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": "t:sections.collection-list.blocks.featured_collection.name",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "t:sections.collection-list.blocks.featured_collection.settings.collection.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Slider",
      "blocks": [
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        }
      ]
    }
  ]
}
{% endschema %}
