{{ 'section-multicolumn-icons.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .multicolumn-icons__link, .multicolumn-icons__link:link, .multicolumn-icons__link:visited, .multicolumn-icons__link:hover  {
    color: {{section.settings.color_links}};
  }
{%- endstyle -%}

<div class="multicolumn-icons--wrapper">
  <div class="multicolumn-icons__background"></div>
  <div class="multicolumn-icons__content">
    {%- for block in section.blocks -%}
      <div class="multicolumn-icons__column">
        <div
          class="multicolumn-icons__image-wrapper"
          style="background-color: {{section.settings.color_background}}33;"
        >
          {%- if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url }}"
              alt="{{ block.settings.image | escape }}"
              class="motion-reduce"
            >
          {%- else -%}
            {% render 'icon-error' %}
          {%- endif -%}
        </div>
        <h4 class="multicolumn-icons__title">{{ block.settings.title }}</h4>
        <a class="multicolumn-icons__link" href="{{ block.settings.link }}">
          {{- block.settings.link_label | escape -}}
        </a>
      </div>
    {%- endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Iconos",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "color",
      "id": "color_links",
      "label": "Color de Enlaces",
      "default": "#D14D41"
    },
    {
      "type": "color",
      "id": "color_background",
      "label": "Color de Fondo",
      "default": "#FFCCB4"
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "icon",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Titulo",
          "label": "t:sections.multicolumn.blocks.column.settings.title.label"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "t:sections.multicolumn.blocks.column.settings.link_label.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.multicolumn.blocks.column.settings.link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Iconos",
      "blocks": [
        {
          "type": "icon"
        },
        {
          "type": "icon"
        },
        {
          "type": "icon"
        },
        {
          "type": "icon"
        }
      ]
    }
  ]
}
{% endschema %}
